<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell.chaitanya.ProjectActivity"
    android:background="@android:color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include layout="@layout/main_toolbar" android:id="@+id/toolbar_project"></include>

            <Button
                android:id="@+id/livelihood_development"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="150dp"
                android:padding="20dp"
                android:textAllCaps="false"
                android:layout_below="@id/toolbar_egi"
                android:text="Livelihood Developement"
                android:background="@color/colorPrimaryDark"
                android:textColor="@android:color/white"
                android:textSize="24dp"/>

            <Button
                android:id="@+id/digital_sakhi"
                android:layout_below="@id/livelihood_development"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Digital Sakhi Programme"
                android:layout_centerHorizontal="true"
                android:textAllCaps="false"
                android:layout_marginTop="60dp"
                android:padding="20dp"
                android:textSize="24dp"
                android:background="@color/colorPrimaryDark"
                android:textColor="@android:color/white"/>

            <Button
                android:id="@+id/fwwb_programme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FWWB Programme"
                android:layout_below="@id/digital_sakhi"
                android:layout_centerHorizontal="true"
                android:textAllCaps="false"
                android:layout_marginTop="60dp"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:paddingTop="18dp"
                android:paddingBottom="18dp"
                android:textSize="24dp"
                android:background="@color/colorPrimaryDark"
                android:textColor="@android:color/white"/>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
