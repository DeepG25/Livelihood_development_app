<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell.chaitanya.Login"
    android:orientation="vertical"
    android:background="@android:color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/loginText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LOGIN"
                android:textSize="60dp"
                android:textColor="@color/colorPrimaryDark"
                android:textAlignment="center"
                android:layout_margin="55dp"/>

            <ImageView
                android:id="@+id/email_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/user"
                android:layout_below="@+id/loginText"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="10dp"/>

            <EditText
                android:id="@+id/loginEditText"
                android:layout_below="@+id/loginText"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enrollment ID"
                android:inputType="number"
                android:layout_toRightOf="@id/email_icon"/>

            <ImageView
                android:id="@+id/pass_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/passwordicon"
                android:layout_below="@+id/loginEditText"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="10dp"/>

            <EditText
                android:id="@+id/passwordEditText"
                android:layout_below="@+id/loginEditText"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password (atleast 6 characters)"
                android:inputType="textPassword"
                android:layout_toRightOf="@+id/pass_icon"/>

            <Button
                android:id="@+id/loginButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:layout_below="@id/passwordEditText"
                android:layout_centerHorizontal="true"
                android:textAllCaps="false"
                android:background="@color/colorPrimaryDark"
                android:layout_margin="55dp"
                android:textColor="#fff"
                android:textSize="22dp"
                android:paddingLeft="27dp"
                android:paddingRight="27dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"/>

            <Button
                android:id="@+id/registerButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:text="Register"
                android:textAllCaps="false"
                android:layout_below="@+id/loginButton"
                android:textSize="22dp"
                android:padding="12dp"
                android:textColor="#fff"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
